{
    "template_id": "confirmation",
    "subject": "Confirm Your Signup - {{ .SiteName }}",
    "template_path": "./confirmation-email-template.html",
    "variables": {
        "SiteName": "{{ .SiteName }}",
        "SiteURL": "{{ .SiteURL }}",
        "ConfirmationURL": "{{ .ConfirmationURL }}",
        "Email": "{{ .Email }}",
        "CurrentYear": "{{ .CurrentYear }}"
    },
    "description": "Email template for user signup confirmation",
    "usage": "Sent when a new user signs up and needs to verify their email address",
    "supabase_config": {
        "auth": {
            "email": {
                "confirm_signup": {
                    "template_id": "confirmation",
                    "subject": "Confirm Your Signup - {{ .SiteName }}",
                    "template_path": "./confirmation-email-template.html"
                }
            }
        }
    }
}