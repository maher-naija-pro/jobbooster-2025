{
    "template_id": "reset_password",
    "subject": "Reset Your Password - {{ .SiteName }}",
    "template_path": "./reset-password-email-template.html",
    "variables": {
        "SiteName": "{{ .SiteName }}",
        "SiteURL": "{{ .SiteURL }}",
        "ConfirmationURL": "{{ .ConfirmationURL }}",
        "Email": "{{ .Email }}",
        "CurrentYear": "{{ .CurrentYear }}",
        "SupportEmail": "{{ .SupportEmail }}"
    },
    "description": "Email template for password reset requests",
    "usage": "Sent when a user requests to reset their password",
    "supabase_config": {
        "auth": {
            "email": {
                "recovery": {
                    "template_id": "reset_password",
                    "subject": "Reset Your Password - {{ .SiteName }}",
                    "template_path": "./reset-password-email-template.html"
                }
            }
        }
    }
}